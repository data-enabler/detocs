---
{
  "roundMappings": {
    "tf": "Grand Finals Reset"
  }
}
---
{{#*inline "playerName"}}
{{~#if person.prefix}}{{person.prefix}} | {{/if}}
{{~#if person.alias}}{{person.alias}}{{else}}{{person.handle}}{{/if}}
{{~#if comment}} ({{comment}}){{/if}}
{{~#if inLosers}} [L]{{/if}}
{{~/inline}}
{{#*inline "commentatorName"}}
{{~#if person.prefix}}{{person.prefix}} | {{/if}}
{{~person.handle}}
{{~/inline}}
{
  "timestamp": "{{timestamp}}",
  "pName1": "{{> playerName state.players.[0]}}",
  "pName2": "{{> playerName state.players.[1]}}",
  "pScore1": "{{state.players.[0].score}}",
  "pScore2": "{{state.players.[1].score}}",
  "comName1": "{{> commentatorName state.commentators.[0]}}",
  "comName2": "{{> commentatorName state.commentators.[1]}}",
  "comTwit1": "{{state.commentators.[0].person.twitter}}",
  "comTwit2": "{{state.commentators.[1].person.twitter}}",
  {{#with (lookup userData.roundMappings state.match.id) as | mapping |}}
  "round": "{{mapping}}",
  {{else}}
  "round": "{{state.match.name}}",
  {{/with}}
  "title": "{{state.tournament}}",
  "subtitle": "{{#if state.event}}{{state.event}}{{else}}{{state.game.name}}{{/if}}",
  "msg1": "{{state.messages.[0]}}",
  "msg2": "{{state.messages.[1]}}",
  "msg3": "{{state.messages.[2]}}",
  "msg4": "{{state.messages.[3]}}"
}
